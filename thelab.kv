ImagesExample:

<ImagesExample@GridLayout>:
    cols: 3
    Image:
        source: "images/cake.jpg"
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
        keep_ratio: False
    AsyncImage:
        source: "images/donut.gif"
        anim_delay: 1/60

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toogle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Click here"
        on_press: root.on_button_click()
        disabled: root.counter_button_disabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
    Switch:
        id: my_switch
        size_hint: None, 1
        width: "100dp"
        on_active: root.on_switch_active(self)
        active: True
    Slider:
        id: my_slider
        min: 0
        max: 100
        value: root.slider_value
        # orientation
        # on_value: root.on_slider_value_change(self)
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
            # text: root.slider_value
        ProgressBar:
            max: 100
            value: int(my_slider.value)
    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: "100dp"
        text: "foo"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Your name is: " + root.text_input_str
        # text: my_text_input.text

