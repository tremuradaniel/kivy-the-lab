        text: "Label"
<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
    Button:
        text: "Hello2"
        size: "100dp", "80dp"
        pos: "150dp", "300dp"
        color: 0, 0, 1, 1
    Label:
        text: "Label"
        size: "100dp", "80dp"
        pos: "250dp", "300dp"
        color: 1, 0, 0, 1